{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (gdb) - Ejecutable de tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",             
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Habilitar pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",           // nombre del task en tasks.json
      "logging": { "engineLogging": false }
    },

    {
      "name": "Attach to gdbserver (remote)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/main",  // Ruta al ejecutable dentro del contenedor
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerServerAddress": "localhost:2345",  // si usas gdbserver
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false
    }
  ]
}
